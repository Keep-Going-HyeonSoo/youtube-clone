extends layouts/main 

block content
  .form-container
    form(action=`${routes.users}${routes.changePassword}`, method='post')
      h4.form-container-title 비밀번호 변경
      input(type='password', name='cur_pw', placeholder='현재 비밀번호')
      input(type='password', name='new_pw1', placeholder='새 비밀번호')
      input(type='password', name='new_pw2', placeholder='비밀번호 확인')
      input(type='submit', value='비밀번호 변경')