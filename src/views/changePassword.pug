extends layouts/main 

block content
  .form-container
    form(action=`${routes.users}${routes.changePassword}`, method='post')
      h4.form-container-title 비밀번호 변경
      input(type='password', name='cur_pw', placeholder='Current Password')
      input(type='password', name='new_pw1', placeholder='New Password')
      input(type='password', name='new_pw2', placeholder='Verify new Password')
      input(type='submit', value='Change Password')