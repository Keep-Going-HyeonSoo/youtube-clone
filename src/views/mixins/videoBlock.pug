mixin videoBlock(video = {})
  .videoBlock
    .videoBlock__video
      a(href=`${routes.videos}${routes.videoDetail(video.id)}`)
        video.videoBlock__thumbnail(src=video.videoFile)
    h4.videoBlock__title= video.title
    if video.views === 1
      h6.videoBlock__views 조회수 1회
    else
      h6.videoBlock__views 조회수 #{video.views}회