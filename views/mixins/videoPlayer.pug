mixin videoPlayer(video = {})
	.videoPlayer#jsVideoPlayer
		video(src=`/${video.src}`)
		.videoPlayer__controls
			.videoPlayer__column
				span#jsPlayButton
					i.fas.fa-play
				span
					|00:00 / 10:00
			.videoPlayer__column
			.videoPlayer__column
				span#jsVolumeBtn
					i.fas.fa-volume-up
				span
					i.fas.fa-expand