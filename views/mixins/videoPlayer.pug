mixin videoPlayer(video = {})
	.videoPlayer#jsVideoPlayer
		video(src=`/${video.src}`)
		.videoPlayer__volumeBar-container
			input.videoPlayer__volumeBar#jsVolumeBar(type='range', min='0', max='100', step='1', value='50')
		.videoPlayer__controls
			.videoPlayer__column
				span#jsPlayButton
					i.fas.fa-play
				span
					span#currentTime 00:00:00
					|/
					span#totalTime 00:00:00
			.videoPlayer__column
			.videoPlayer__column
				i.fab.fa-youtube
					span &nbsp;HyeonTube
				span.videoPlayer__btn--volume#jsVolumeBtn
					i.fas.fa-volume-up
				span.videoPlayer__btn--screen#jsFullScreen
					i.fas.fa-expand
		.videoPlayer__blink-icon
			span#jsBlinkIcon
				i.fas.fa-play-circle