mixin videoPlayer(video = {})
	.videoPlayer#jsVideoPlayer
		video(src=`/${video.src}`)
		.videoPlayer__controls
			.videoPlayer__column
				span#jsPlayButton
					i.fas.fa-play
				span
					span#currentTime 00:00:00
					|/
					span#totalTime 00:00:00
			.videoPlayer__column
			.videoPlayer__column
				i.fab.fa-youtube
					span &nbsp;HyeonTube
				input.videoPlayer__volume#jsVolumeBar(type='range', min='0', max='100', step='1', value='50')
				span#jsVolumeBtn
					i.fas.fa-volume-up
				span#jsFullScreen
					i.fas.fa-expand
		.videoPlayer__blink-icon
			span#jsBlinkIcon
				i.fas.fa-play-circle